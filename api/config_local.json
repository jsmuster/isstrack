{
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Username": "postgres",
    "Password": "admin",
    "Database": "isstrack"
  },
  "Service": {
    "Name": "Issue Tracker API",
    "Environment": "local",
    "ExternalUrl": "http://localhost:8080",
    "EnableOpenInView": true
  },
  "Logging": {
    "Level": "INFO"
  },
  "Security": {
    "JwtIssuer": "issue-tracker",
    "JwtExpirationMinutes": 60
  },
  "Websocket": {
    "AllowedOrigins": ["http://localhost:4200"],
    "AllowQueryToken": true
  },
  "Diagnostics": {
    "memoryLogIntervalSeconds": 60,
    "enableMemoryLogging": true,
    "enableGcStats": true,
    "enableMemoryCleanup": true,
    "memoryCleanupIntervalSeconds": 60,
    "memoryCleanupThresholdMb": 400
  },
  "MemoryBudget": {
    "enabled": true,
    "targetWorkingSetMb": 450,
    "gcHeapHardLimitMb": 400,
    "memoryCacheSizeLimitMb": 32,
    "promptCacheLimitMb": 16,
    "promptMlCacheLimitMb": 16,
    "maxLoggedPayloadBytesPerOperation": 0
  }
}
